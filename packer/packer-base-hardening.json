{
  "variables": {
    "ssh_keypair_name": "packer_base_id_rsa",
    "ssh_username": "centos",
    "aws_region": "us-east-1",
    "aws_virtualization_type": "hvm",
    "ami_image_name_regex": "CentOS Linux 7 x86_64 HVM EBS*",
    "ami_owner": "679593333241",
    "aws_instance_type": "t2.micro",
    "ssh_private_key_file_path": "./../../ssh-keys/packer_base_id_rsa",
    "aws_ami_description": "",
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_description": "{{ user `aws_ami_description` }}",
    "region": "{{ user `aws_region` }}",
    "ami_virtualization_type": "{{ user `aws_virtualization_type` }}",
    "source_ami_filter": {
        "filters": {
          "virtualization-type": "{{ user `aws_virtualization_type` }}",
          "name": "{{ user `ami_image_name_regex` }}",
          "root-device-type": "ebs"
        },
        "owners": ["{{ user `ami_owner` }}"],
        "most_recent": true
    },
    "instance_type": "{{ user `aws_instance_type` }}",
    "ssh_username": "{{user `ssh_username`}}",
    "ami_name": "ami-centos-base-hardening-{{timestamp}}",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "associate_public_ip_address": true,
    "tags": {
      "Name": "CentOS-Base-Hardening"
    }
  }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./../ansible/playbook-base-hardening.yml"
    }
  ],
  "post-processors": [{
      "type": "manifest",
      "output": "manifest-base-hardening.json",
      "strip_path": true
  }]
}
